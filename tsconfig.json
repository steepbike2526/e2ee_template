{
  "compilerOptions": {
    "types": ["svelte", "node", "vite/client"],
    "lib": ["DOM", "DOM.Iterable", "ES2022", "esnext.disposable"],
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.svelte",
    "vite.config.ts",
    "svelte.config.js"
  ]
}
